<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trianguloy.llscript.repository.noManager">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/instructions"
        android:id="@+id/textView2"
        android:autoText="false"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:textAlignment="gravity"
        android:gravity="center_vertical|left"
        android:padding="10sp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_load_from_launcher"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:background="#ffcbcbcb"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoText="false"
        android:gravity="center_vertical|left"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_inject_from_launcher"
        android:id="@+id/button3"
        android:onClick="buttonInjectFromLauncher"
        android:layout_gravity="bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_load_from_template"
        android:id="@+id/textView5"
        android:layout_weight="1"
        android:background="#ffcbcbcb"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:enabled="false"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:text="@string/button_inject_from_template"
        android:onClick="buttonInjectFromTemplate"
        android:layout_gravity="bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions_load_root"
        android:id="@+id/textView6"
        android:layout_weight="1"
        android:background="#ffcbcbcb"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:enabled="false"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_inject_root"
        android:id="@+id/button4"
        android:onClick="buttonInjectThroughRoot" />


</LinearLayout>
</ScrollView>