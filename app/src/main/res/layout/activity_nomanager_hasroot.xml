<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trianguloy.llscript.repository.noManager">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/instructions_root"
            android:id="@+id/textView2"
            android:autoText="false"
            android:background="#ffffffff"
            android:textColor="#ff000000"
            android:textAlignment="gravity"
            android:gravity="center_vertical|left"
            android:padding="10sp"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_inject_root"
            android:id="@+id/button2"
            android:onClick="buttonInjectThroughRoot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_or"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/instructions_load_from_launcher"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:background="#ffcbcbcb"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoText="false"
            android:gravity="center_vertical|left"
            android:textColor="#ff000000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_inject_from_launcher"
            android:id="@+id/button3"
            android:onClick="buttonInjectFromLauncher"
            android:layout_gravity="bottom" />


    </LinearLayout>
</ScrollView>