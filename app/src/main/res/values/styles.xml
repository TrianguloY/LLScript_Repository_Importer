<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" parent="android:Theme.Light"/>
    <style name="Theme.Dark" parent="android:Theme.Black"/>
    <style name="Theme.Transparent" parent="Theme">
    <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10px</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:src">@android:color/darker_gray</item>
    </style>
    <style name="Theme.SmallDivider" parent="Theme.Divider">
    <item name="android:layout_height">5px</item>
    <item name="android:src">@android:drawable/divider_horizontal_bright</item>
    </style>
    <style name="Theme.BorderlessButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="Theme.TitleText"/>
</resources>