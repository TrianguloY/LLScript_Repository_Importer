<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General">
        <CheckBoxPreference
            android:key="@string/pref_about_script"
            android:title="Attach 'About Script'"
            android:defaultValue="true" />
        <Preference
            android:title="Subscriptions"
            android:summary="Manage your subscriptions">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.trianguloy.llscript.repository.SubscriptionsDialog"
                android:targetPackage="com.trianguloy.llscript.repository" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="Links">
        <Preference android:title="@string/text_play_store">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/link_play_store" />
        </Preference>

        <Preference android:title="@string/text_google_plus">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/link_google_plus" />
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory android:title="About">
        <Preference
            android:title="Authors"
            android:summary="TrianguloY and Lukas Morawietz"
            android:enabled="false" />
    </PreferenceCategory>
</PreferenceScreen>
